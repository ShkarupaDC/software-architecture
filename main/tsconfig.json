{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./",
    "typeRoots": ["./@types"],
    "paths": {
      "@src/*": ["./src/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@config/*": ["./src/config/*"],
      "@lib/*": ["src/lib/*"],
      "@schema/*": ["./src/schema/*"],
      "@shared/*": ["../shared/*"],
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}