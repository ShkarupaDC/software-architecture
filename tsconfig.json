{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}